<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:Orchardizer.UI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Orchardizer.UI.ExportTypesWindow"
        Title="Generate Migrations from Export xml" Height="auto" Width="785" SizeToContent="Height" d:DesignHeight="648">
    <Grid>
        <TextBox HorizontalAlignment="Stretch" Margin="10,10,10,372" TextWrapping="Wrap" VerticalAlignment="Stretch"  AcceptsTab="True" Text="{Binding Input}" ></TextBox>
        <TextBlock HorizontalAlignment="Left" Margin="10,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="45" Width="351" FontStyle="Italic" Text="Paste in your export code generated in the Orchard dashboard. Paste from the opening &lt;Type&gt; tag."/>
        <Button Content="Continue" IsDefault="True" HorizontalAlignment="Left" Margin="10,300,0,0" VerticalAlignment="Top" Width="76" RenderTransformOrigin="-0.187,0.75" Click="Button_Click"/>
        <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="125,300,0,0"/>

        <TextBox HorizontalAlignment="Stretch" Margin="10,342,10,40" TextWrapping="Wrap" VerticalAlignment="Stretch"  AcceptsTab="True" Text="{Binding Output}" ></TextBox>
        
    </Grid>
</Window>
